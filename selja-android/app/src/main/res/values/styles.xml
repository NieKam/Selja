<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimary">@color/foreground_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="textBase">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="title" parent="textBase">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="price">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="priceBigger" parent="price">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="clickableText" parent="textBase">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="subItem" parent="textBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="subItemBigger" parent="textBase">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="descriptionLabel" parent="subItemBigger">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="label" parent="subItem">
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="DarkTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/selectionColor</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="boxStrokeColor">@color/selectionColor</item>
    </style>

</resources>
